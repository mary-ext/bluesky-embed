{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"types": [],
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
	},
	"include": ["lib", "src"],
	"references": [{ "path": "./tsconfig.node.json" }],
}
